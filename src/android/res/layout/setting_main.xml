<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_bgcolor" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <include layout="@layout/base_title" />
	<ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    >
	    <LinearLayout 
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/WHITE" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/setting_top_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal" >

                <com.hair.salon.widget.CircleImageView
                    android:id="@+id/customer_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/hair_style_img_7" 
                    app:border_width="1dp"/>
			 <Button
            android:id="@+id/btn_login"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/RED"
            android:text="登录"
            android:textColor="@color/WHITE" 
            android:visibility="gone"/>
                <LinearLayout
                    android:id="@+id/user_msg_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:textSize="18sp"
                        android:text="小龙"
                        android:textColor="@color/WHITE" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="芙蓉街1号"
                        android:textColor="@color/WHITE" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/WHITE"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/join_salon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/my_message"
                android:drawablePadding="5dp"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:background="@anim/shape_rounded_rectangle"
                android:text="加入沙龙" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@anim/shape_rounded_rectangle" >

            <TextView
                android:id="@+id/my_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/receive_address"
                android:drawablePadding="5dp"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:text="收货地址" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line" />

            <TextView
                android:id="@+id/exchange_integral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/points_for"
                android:drawablePadding="5dp"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:text="积分兑换" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" 
            android:background="@anim/shape_rounded_rectangle">

            <TextView
                android:id="@+id/return_opinion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/feedback"
                android:drawablePadding="5dp"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:text="意见反馈" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line" />

            <TextView
                android:id="@+id/version_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/update"
                android:drawablePadding="5dp"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:text="版本更新" />
			<TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line" />
            <TextView
                android:id="@+id/score_to_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/take_scores"
                android:drawablePadding="5dp"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:text="给我们打分" />
        </LinearLayout>
         <Button
            android:id="@+id/out_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/RED"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="退出登录"
            android:textColor="@color/WHITE" />
        </LinearLayout>
</ScrollView>
       
    </LinearLayout>

