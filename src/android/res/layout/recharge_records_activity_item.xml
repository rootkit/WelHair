<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/WHITE" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
    <TextView 
        android:id="@+id/record_number"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentLeft="true"/>
    <TextView 
        android:id="@+id/recharge_time"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="5dp"
    	android:layout_below="@id/record_number"
    	android:layout_alignParentLeft="true"
    	android:textColor="@color/LIGHT_LIGHT_GRAY"/>
    <TextView 
        android:id="@+id/recharge_amount"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentRight="true"/>
     <TextView 
        android:id="@+id/recharge_status"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="5dp"
    	android:layout_below="@id/recharge_amount"
    	android:layout_alignParentRight="true"
    	android:textColor="@color/LIGHT_LIGHT_GRAY"/>
</RelativeLayout>
    
</LinearLayout>
