<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

     <RelativeLayout 
         android:layout_width="match_parent"
    	android:layout_height="wrap_content">
    	 <ImageView
            android:id="@+id/work_photo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@color/WHITE"
            android:padding="3dp"
            android:gravity="center"
            android:src="@drawable/hair_style_img_3" />

        <TextView
            android:id="@+id/work_photo_date"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/work_photo"
            android:background="@drawable/dateflag_background"
            android:text="2014/07/10" />
    
         <ImageView
            android:id="@+id/work_photo_delete"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginTop="0dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/work_photo"
            android:gravity="center"
            android:src="@drawable/iconfont_trashbin" />
         </RelativeLayout>
         
    
</LinearLayout>