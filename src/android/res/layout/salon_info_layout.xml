<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bgcolor" >

    <include
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        layout="@layout/base_title" />

    <LinearLayout
        android:id="@+id/salon_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:background="@color/WHITE"
        android:orientation="horizontal" 
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/salon_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:src="@drawable/hair_style_img_10" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/salon_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="漂丝丽芳" 
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/salon_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/stars" />

            <TextView
                android:id="@+id/salon_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/iconfont_phone_little"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="277338"/>

            <TextView
                android:id="@+id/salon_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/iconfont_map_little"
                android:drawablePadding="5dp"
                android:text="丁豪广场"/>
        </LinearLayout>
    </LinearLayout>
	<ImageView 
        	    android:id="@+id/image_yazi"
        	    android:layout_below="@+id/salon_layout"
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_marginTop="-2dp"
        	    android:src="@drawable/yazi"
        	    />
    
    <ImageView
            android:id="@+id/salon_show"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/image_yazi"
            android:gravity="center"
            android:src="@drawable/hair_style_img_5" />
    
</RelativeLayout>