<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bgcolor"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_layout"
        layout="@layout/base_title" />

    <LinearLayout
        android:id="@+id/title_label"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_below="@id/title_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@anim/shape_rectangle_blue"
        android:orientation="horizontal"
        android:padding="1dp" >

        <TextView
            android:id="@+id/collection_zuopins"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="作品"
            android:textColor="@color/RANGE_BLUE" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/RANGE_BLUE" />

        <TextView
            android:id="@+id/collection_salons"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="沙龙"
            android:textColor="@color/RANGE_BLUE" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/RANGE_BLUE" />

        <TextView
            android:id="@+id/collection_designers"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="设计师"
            android:textColor="@color/RANGE_BLUE" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/RANGE_BLUE" />

        <TextView
            android:id="@+id/collection_productions"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="商品"
            android:textColor="@color/RANGE_BLUE" />
    </LinearLayout>

    <ListView
        android:id="@+id/stylist_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_label"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:cacheColorHint="#00000000"
        android:fadeScrollbars="true"
        android:horizontalSpacing="10dp"
        android:listSelector="#00000000"
        android:scrollbars="none"
        android:verticalSpacing="10dp" />

</RelativeLayout>