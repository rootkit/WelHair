<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical" 
    android:padding="5dp">

    <ImageView
        android:id="@+id/hair_style_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/hair_style_img_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical" >

     <!--    <ImageView
            android:id="@+id/hair_style_desginer_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/hair_style_img_1" /> -->
		<com.hair.salon.widget.CircleImageView
		        android:id="@+id/hair_style_desginer_img"
		        android:layout_width="45dp"
		        android:layout_height="45dp"
		        android:src="@drawable/hair_style_img_7" />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/hair_style_desginer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="沙芝" 
                android:textColor="@color/BLUE_FONT"/>

            <TextView
                android:id="@+id/hair_style_desginer_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/hair_style_desginer_name"
                android:text="发型师"
                android:textColor="@color/BLUE_FONT" />

            <TextView
                android:id="@+id/hair_style_desginer_salon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hair_style_desginer_name"
                android:layout_marginLeft="5dp"
                android:text="漂丽丝坊" 
                android:textColor="@color/GRAY"/>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFEDEDED" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/lucence_add001"
            android:gravity="center_vertical"
            android:text="(0)" />

        <TextView
            android:id="@+id/collect_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/iconfont_like_gray"
            android:gravity="center_vertical"
            android:text="(1)" />
    </LinearLayout>

</LinearLayout>