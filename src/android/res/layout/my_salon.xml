<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bgcolor" >

    <include
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        layout="@layout/base_title" />

     <TextView
        android:id="@+id/vertical_line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:background="@color/line"
        android:drawablePadding="5dp"
        android:gravity="center" />
    
    <TextView
        android:id="@+id/designer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_toLeftOf="@+id/vertical_line"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/designer"
        android:gravity="center"
        android:text="设计师" />

    <TextView
        android:id="@+id/salon_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/vertical_line"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/salon_manager"
        android:gravity="center"
        android:text="沙龙管理" />

    <TextView
        android:id="@+id/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/designer"
        android:layout_marginTop="20dp"
        android:background="@color/line"
        android:drawablePadding="5dp"
        android:gravity="center" />
    
    <TextView
        android:id="@+id/salon_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontal_line"
        android:layout_toLeftOf="@+id/vertical_line"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/salon_info"
        android:gravity="center"
        android:text="沙龙资料" />
    
     <TextView
        android:id="@+id/horizontal_line_sencond"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/salon_info"
        android:layout_marginTop="20dp"
        android:background="@color/line"
        android:drawablePadding="5dp"
        android:gravity="center" />
</RelativeLayout>