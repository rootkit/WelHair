<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bgcolor"
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        layout="@layout/base_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@anim/shape_rounded_rectangle"
                android:padding="10dp">
                <TextView 
                    android:id="@+id/customer_account_label"
                    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_alignParentLeft="true"
                	android:textColor="@color/LIGHT_LIGHT_GRAY"
                	android:layout_centerVertical="true"
                	android:textSize="20sp"
                	android:text="账号:"/>
                <EditText 
                    android:id="@+id/customer_account"
                    android:layout_width="match_parent"
                	android:layout_height="wrap_content"
                	android:gravity="right"
                	android:layout_alignBaseline="@id/customer_account_label"
                    android:layout_marginLeft="70dp"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:background="@color/WHITE"
                	android:layout_alignParentRight="true"/>
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@anim/shape_rounded_rectangle"
                android:layout_marginTop="10dp"
                android:padding="10dp">
                <TextView 
                    android:id="@+id/customer_nickname_label"
                    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_alignParentLeft="true"
                	android:textColor="@color/LIGHT_LIGHT_GRAY"
                	android:layout_centerVertical="true"
                	android:textSize="20sp"
                	android:text="昵称:"/>
                <EditText 
                    android:id="@+id/customer_nickname"
                    android:layout_width="match_parent"
                	android:layout_height="wrap_content"
                	android:gravity="right"
                	android:layout_alignBaseline="@id/customer_nickname_label"
                    android:layout_marginLeft="70dp"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:background="@color/WHITE"
                	android:layout_alignParentRight="true"/>
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@anim/shape_rounded_rectangle"
                android:layout_marginTop="10dp"
                android:padding="10dp">
                <TextView 
                    android:id="@+id/customer_email_label"
                    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_alignParentLeft="true"
                	android:textColor="@color/LIGHT_LIGHT_GRAY"
                	android:layout_centerVertical="true"
                	android:textSize="20sp"
                	android:text="邮箱:"/>
                <EditText 
                    android:id="@+id/customer_email"
                    android:layout_width="match_parent"
                	android:layout_height="wrap_content"
                	android:gravity="right"
                	android:layout_alignBaseline="@id/customer_email_label"
                    android:layout_marginLeft="70dp"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:background="@color/WHITE"
                	android:layout_alignParentRight="true"/>
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@anim/shape_rounded_rectangle"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">
                <TextView 
                    android:id="@+id/customer_self_img_label"
                    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_alignParentLeft="true"
                	android:textColor="@color/LIGHT_LIGHT_GRAY"
                	android:layout_centerVertical="true"
                	android:layout_marginLeft="10dp"
                	android:textSize="20sp"
                	android:text="头像:"/>
                <ImageView 
                    android:id="@+id/customer_self_img"
                    android:layout_width="40dp"
                	android:layout_height="40dp"
                	android:layout_margin="5dp"
                	android:src="@drawable/hair_style_img_2"
                	android:layout_alignParentRight="true"/>
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@anim/shape_rounded_rectangle"
                android:layout_marginTop="10dp"
                android:padding="10dp">
                <TextView 
                    android:id="@+id/customer_phone_label"
                    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_alignParentLeft="true"
                	android:textColor="@color/LIGHT_LIGHT_GRAY"
                	android:layout_centerVertical="true"
                	android:textSize="20sp"
                	android:text="手机号:"/>
                <EditText 
                    android:id="@+id/customer_phone"
                    android:layout_width="match_parent"
                	android:layout_height="wrap_content"
                	android:gravity="right"
                	android:layout_alignBaseline="@id/customer_phone_label"
                    android:layout_marginLeft="70dp"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:background="@color/WHITE"
                	android:layout_alignParentRight="true"/>
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@anim/shape_rounded_rectangle"
                android:layout_marginTop="10dp"
                android:padding="10dp">
                <TextView 
                    android:id="@+id/customer_invite_label"
                    android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_alignParentLeft="true"
                	android:textColor="@color/LIGHT_LIGHT_GRAY"
                	android:layout_centerVertical="true"
                	android:textSize="20sp"
                	android:text="邀请人:"/>
                <EditText 
                    android:id="@+id/customer_invite"
                    android:layout_width="match_parent"
                	android:layout_height="wrap_content"
                	android:gravity="right"
                	android:layout_alignBaseline="@id/customer_invite_label"
                    android:layout_marginLeft="70dp"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:background="@color/WHITE"
                	android:layout_alignParentRight="true"/>
            </RelativeLayout>
            
            <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:text="个人秀"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="60dp"
            android:background="@anim/shape_rounded_rectangle"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_add1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/add_image" />

            <ImageView
                android:id="@+id/img_add2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/add_image" />

            <ImageView
                android:id="@+id/img_add3"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/add_image" />

            <ImageView
                android:id="@+id/img_add4"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/add_image" />
        </LinearLayout>
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>