<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_bgcolor" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/title_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@anim/shape_rounded_rectangle"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp" >

        <RelativeLayout 
            android:layout_width="match_parent"
        	android:layout_height="wrap_content">
            <TextView
            android:id="@+id/salon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:textColor="@color/RANGE_BLUE" 
            android:textSize="16sp"
            android:text="欣欣沙龙"/>
            
            <TextView
            android:id="@+id/production_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/GREEN" 
            android:textSize="12sp"
            android:text="已付款"/>
            
        </RelativeLayout>
        
         <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/LIGHT_GRAY" />
        
          <RelativeLayout 
            android:layout_width="match_parent"
        	android:layout_height="wrap_content">
            <ImageView 
                android:id="@+id/production_img"
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:layout_alignParentLeft="true"
	            android:src="@drawable/xifashui2"/>
          <TextView
            android:id="@+id/production_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
           	android:layout_toRightOf="@id/production_img"
            android:textSize="16sp"
            android:text="Safer洗发水"/>
           <TextView
            android:id="@+id/production_capacity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
           	android:layout_below="@id/production_name"
           	android:layout_toRightOf="@id/production_img"
           	android:layout_marginTop="10dp"
            android:text="容量:"
            android:textColor="@color/LIGHT_LIGHT_GRAY"/>
            <TextView
            android:id="@+id/production_capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignBaseline="@id/production_capacity_label"
           	android:layout_toRightOf="@id/production_capacity_label"
            android:text="200毫升"
            android:textColor="@color/LIGHT_LIGHT_GRAY"/>
             <TextView
            android:id="@+id/production_color_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_alignBaseline="@id/production_capacity_label"
           	android:layout_toRightOf="@id/production_capacity"
            android:text="颜色"
            android:textColor="@color/LIGHT_LIGHT_GRAY"/>
              <TextView
            android:id="@+id/production_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignBaseline="@id/production_capacity_label"
           	android:layout_toRightOf="@id/production_color_label"
            android:text="白色"
             android:textColor="@color/LIGHT_LIGHT_GRAY"/>
              
              
               <TextView
            android:id="@+id/production_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="￥15.00"
             android:textColor="@color/LIGHT_LIGHT_GRAY"/>
               <TextView
            android:id="@+id/production_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/production_price"
            android:layout_alignBaseline="@id/production_capacity_label"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/LIGHT_LIGHT_GRAY"/>
          </RelativeLayout>
         
          <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/LIGHT_GRAY" />
          
          <RelativeLayout 
            android:layout_width="match_parent"
        	android:layout_height="wrap_content">
            <ImageView 
                android:id="@+id/edit_img"
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:layout_alignParentLeft="true"
	            android:src="@drawable/iconfont_xiugai_black"/>
            <TextView
            android:id="@+id/production_freight"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
           	android:layout_marginRight="5dp"
            android:text="￥10.00"
            android:textColor="@color/LIGHT_LIGHT_GRAY"/>
            
          <TextView
            android:id="@+id/production_freight_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/production_freight"
           	android:layout_alignBaseline="@id/production_freight"
           	android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="运费:"
            android:textColor="@color/LIGHT_LIGHT_GRAY"/>
           
           <TextView
            android:id="@+id/production_price_combined"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/production_freight_label"
            android:layout_alignParentRight="true"
            android:gravity="center"
           	android:layout_marginRight="5dp"
            android:text="￥25.00"
            android:textSize="16sp"/>
          
            <TextView
            android:id="@+id/production_price_combined_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/production_price_combined"
            android:layout_alignBaseline="@id/production_price_combined"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="合计:"
            android:textColor="@color/LIGHT_LIGHT_GRAY"/>
            
          
          </RelativeLayout>
        
    </LinearLayout>
	
</LinearLayout>
